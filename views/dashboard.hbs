<div class="message">
    <span>Message</span>
</div>
<div class="content">

{{#each data}}
<div class="post {{this._id}}">
    <div class="image ">
        <img class="content-image " src={{this.image}}>
    </div>
    <div class="action">
        <div class="approve"><button id={{this._id}} class=" accept btn btn-success">Approve</button></div>
        <div class="decline"><button id={{this._id}} class="discard btn btn-danger">Decline</button></div>
    </div>
</div>
{{/each}}
</div>
  <script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
<script>
    $('.accept').on('click',function(){
        var id = $(this).attr('id')
        console.log(id);
        $.ajax({
            url:"/approval",
            data:{
                "id": id
            },
            method : "post",
            success: function(data){
               console.log(data);
                $('.'+id).hide();
                
                $(".message").fadeIn(200).next().fadeOut();
            }
        })
    })
    $('.discard').on('click',function(){
        var id = $(this).attr('id')
        $.ajax({
            url:"/decline",
            data:{
                "id": id
            },
            method : "post",
            success: function(data){
               console.log(data);
                $('.'+id).hide();
                 $(".message").fadeIn(200).next().fadeOut();
                
            }
        })
    })

</script>