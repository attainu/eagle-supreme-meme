 <div class="popup">
 <div class="container mt-5 ">
       <div class="row mt-5">
           <div class="col-md-4 mt-5">
               <div class="container">
                   <div class= "login center">
                       {{#if error}}
                       <div class="login center hideLogin" style="display: none;"></div>
                       <div class="inputField center" style="display: block;">
                            <form action="/signin" method="POST">
                            <input id="usernameLogin" type="text" class="form-control mx-auto inputDetail" placeholder="Username" name="userName" required>
                            <input id="passwordLogin" type="password" class="form-control  mx-auto inputDetail" placeholder="Password" name="password" required>
                            <p id='forgotPass'>Forgot Password</p>
                            {{{error}}}<br>
                            <button type="submit" class=" loginDesign" id="loginSubmit">Login</button>
                            </form>
                        </div>
                           {{else}}
                    <div class="login center hideLogin">
                        <h1 class="center colors">Welcome Back</h1>
                        <p class="center colors">We Love People Who Share Happiness</p>
                        <button class="buttonLogin loginDesign" id="loginClick">Login</button>
                        </div>
                           {{/if}}
                        
                        
                        <div class="inputField center">
                            <form action="/signin" method="POST">
                            <input id="usernameLogin" type="text" class="form-control mx-auto inputDetail" placeholder="Username" name="userName" required>
                            <input id="passwordLogin" type="password" class="form-control  mx-auto inputDetail" placeholder="Password" name="password" required>
                            <p id='forgotPass'>Forgot Password</p>
                            <button type="submit" class=" loginDesign" id="loginSubmit">Login</button>
                            </form>
                        </div>

                        <div class="forPass center" style="display: none;">
                            <form action="/signin" method="POST">
                            <input id="usernameLogin" type="text" class="form-control mx-auto inputDetail" placeholder="Username" name="userName" required>
                            <select class="form-control  mx-auto inputDetail" name="securityQuestion" required>
                                        <option value="petName">Pet Name</option>
                                        <option value="middleName">Middle Name</option>
                                        <option value="grandParentsName">Grand Parents Name</option>
                                    </select>
                                    <input type="text" class="form-control  mx-auto inputDetail" placeholder="Answer" name="securityAnswer" required>
                            <button type="submit" class=" loginDesign" id="forPassSub" style="width: 150px;">Get Password</button>
                            <h2 id="seqPassword">{{pass}}</h2>
                            </form>
                        </div>
                   </div>
                
               </div>
           </div>
           <div class="col-md-8 mt-5">
               <div class="container">
                   <div class="signup center">
                        <div class="signupPage">
                                <h1 class="signupCol colors">Join US</h1>
                                <p class="signupCol colors">The Fastest Growing Meme Community</p>
                                
                                </div>
                                <div class=" signupPage inputFieldSignUP ">
                                    <form action="/signup" method="POST">
                                    <input id="firstname" type="text" class="form-control mx-auto inputDetail" placeholder="First Name" name="firstName" required>
                                    <input id="lastname" type="text" class="form-control mx-auto inputDetail" placeholder="Last Name" name="lastName" required>
                                    <input id="emailSign" type="email" class="form-control mx-auto inputDetail" placeholder="Email-Id" name="email" required>
                                    <input id="usernameSign" type="text" class="form-control mx-auto inputDetail" placeholder="Username" name="userName" required>
                                    <input id="passwordSign" type="password" class="form-control  mx-auto inputDetail" placeholder="Password" name="password" required>
                                    <input id="confirmPass" type="password" class="form-control  mx-auto inputDetail" placeholder="Confirm Password" required>
                                    <select class="form-control  mx-auto inputDetail" name="securityQuestion" required>
                                        <option value="petName">Pet Name</option>
                                        <option value="middleName">Middle Name</option>
                                        <option value="grandParentsName">Grand Parents Name</option>
                                    </select>
                                    <input type="text" class="form-control  mx-auto inputDetail" placeholder="Answer" name="securityAnswer" required>
                                    <button type="submit" class=" loginDesign" id="submitClick">SignUP</button>
                                    </form>
                            </div>
                   </div>
               
               </div>
           </div>
       </div>
   </div>
   </div>
