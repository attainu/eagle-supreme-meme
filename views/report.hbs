<div class="content">

{{#each data}}
<div class="post {{this._id}}">
    <div class="image ">
        <img class="content-image " src={{this.url}}>
    </div>
    <div class="action">
       <div class="approve"><button id={{this._id}} class=" accept btn btn-success">Approve</button></div> 
       
        <div class="decline"><button id={{this._id}} class="discard btn btn-danger">Decline</button></div>
    </div>
</div>
{{/each}}
</div>
 <!-- Button trigger modal -->
<button type="button" id="good" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  <script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
<script>
    $('.accept').on('click',function(){
        var id = $(this).attr('id')
        console.log(id);
        $.ajax({
            url:"/review",
            data:{
                "id": id
            },
            method : "post",
            success: function(data){
               console.log(data);
               $("#good").click()
                $('.'+id).hide();
            }
        })
    })
    $('.discard').on('click',function(){
        var id = $(this).attr('id')
        console.log(id);
        $.ajax({
            url:"/delete", 
            data:{
                "id": id
            },
            method : "post",
            success: function(data){
               console.log(data);
                $('.'+id).hide();
            }
        })
    })

</script>