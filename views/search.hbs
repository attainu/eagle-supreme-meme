<div class="content">
    <script>
			var animated = false;
			$('.heart').click(function(){
			  if(!animated){
			    $(this).addClass('happy').removeClass('broken');
			    animated = true;
			  }
			  else {
			    $(this).removeClass('happy').addClass('broken');
			    animated = false;
			  }
			}); 
		</script>

{{#each data}}
<div class="post">
    <div class="image">
        <img class="content-image" src="{{this.url}}">
        
    </div>
    <div class="main-reaction">
        <div class="displaylikenumbers">
            <span>{{this.like}}Likes</span>
        </div>
        <div class="reactionandshare">
        <div class="reaction">
            <div class="likebutton"><div class="heart">‚ù§</div>
		</div>
            <div class="comment"> Comment Section</div>
            <div class="wishlist"> WishList</div>
        </div>
        <div class="share">
            <div class="fb-share-button" data-href={{this.url}} data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{this.url}}" class="fb-xfbml-parse-ignore">Share</a></div>
            <div class="twitter">T</div>
        </div>
        </div>
    </div>
</div>
{{/each}}
</div>