<div class="content">

  {{#each data}}
  <div class="post">
    <div class="image">
      <img class="content-image" src="{{this.url}}">

    </div>
    <div class="main-reaction">
      <div class="displaylikenumbers">
        <span id="likeCount{{this._id}}">{{this.like}}Likes</span>
      </div>
      <div class="reactionandshare">
        <div class="reaction">
          <div class="likebutton">
            <div class="heart" id={{this._id}}>❤ Like</div>
          </div>
          <div class="comment">

            {{!-- comment modal --}}
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg{{this._id}}">Comments</button>

            <div class="modal fade bd-example-modal-lg{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
              aria-hidden="true">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="bd-example-modal-lg{{this._id}}">{{this.title}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <div class="image">
                      <img class="content-image" src="{{this.url}}">
                    </div>

                    <div class="modal-body">
                      <div class="displaylikenumbers">
                        <span id="likeCountC{{this._id}}">{{this.like}}Likes</span>
                      </div>
                      <div class="reactionandshare">
                        <div class="reaction">
                          <div class="likebutton">
                            <div class="heart" id={{this._id}}>❤ Like</div>
                          </div>
                        </div>
                      </div>
                      <div class="share">
                        <div class="fb-share-button" data-href={{this.url}} data-layout="button" data-size="large"><a
                            target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{this.url}}"
                            class="fb-xfbml-parse-ignore">Share</a>
                        </div>
                        <div class="twitter">T</div>
                      </div>
                    </div>
                    
                    <br><br><br>
                    <div class="modal-body">
                      <textarea name="comment" placeholder="Enter Comment" style=" width: 100%;"></textarea>
                      <button class="btn btn-primary" style="margin-left: 15%; width: 70%;">submit</button>
                    </div>

                    <div class="modal-body">
                      <p><b>User Name: </b>hello</p>
                      <p><b>User Name: </b>hello</p>
                      <p><b>User Name: </b>hello</p>
                      <p><b>User Name: </b>hello</p>
                    </div>

                  </div>
                </div>
              </div>
            </div>
            {{!--  --}}

          </div>

          <div class="wishlist"> WishList</div>
        </div>
        <div class="share">
          <div class="fb-share-button" data-href={{this.url}} data-layout="button" data-size="large"><a target="_blank"
              href="https://www.facebook.com/sharer/sharer.php?u={{this.url}}" class="fb-xfbml-parse-ignore">Share</a>
          </div>
          <div class="twitter">T</div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- modal --}}
<button id="loginModal" type="button" class="btn btn-primary" data-toggle="modal" data-target="#likeModal"
  style="margin-top: 50px;" hidden>
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="likeModal" tabindex="-1" role="dialog" aria-labelledby="likeModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="likeModalLabel">You have to be Logged-in first</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="/loginpage"><button type="button" class="btn btn-primary">Log-in</button></a>
      </div>
    </div>
  </div>
</div>

